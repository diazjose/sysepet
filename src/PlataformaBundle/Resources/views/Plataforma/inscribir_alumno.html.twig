{% extends 'layout.html.twig' %}

{% block body %}

    {{ parent() }}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success" role="alert">
            <div class="container">{{ flashMessage }}</div>

        </div>

    {% endfor %}

    <div class="col-md-6 col-md-offset-3">

        <h2 class="form-signin-heading">Registrar Alumno</h2><br>
        <form action="{{ path('inscribir_alumno', {id: id}) }}">        

            <div class="form-group">
                <label>Curso </label>
            	<select name="curso" class="form-control">
                	<option>1°</option>
                	<option>2°</option>
                	<option>3°</option>
                	<option>4°</option>
                	<option>5°</option>
                	<option>6°</option>
                </select>
            </div>

            <div class="form-group">
            	<label>Division </label>
                <select name="division" class="form-control">
                	<option>1°</option>
                	<option>2°</option>
                	<option>3°</option>
                	<option>4°</option>
                	<option>5°</option>
                	<option>6°</option>
                	<option>7°</option>
                	<option>8°</option>
                </select>
            </div>

            <div class="form-group">
                <label>Turno </label>
                <select name="turno" class="form-control">
                	<option>Mañana</option>
                	<option>Tarde</option>
                </select>
            </div>

            <div class="form-group">
                <label>Especialidad </label>
                <select name="especialidad" class="form-control">
                	<option>Construccion</option>
                	<option>Electromecanica</option>                	
                </select>
            </div>

            <div class="form-group">
                <label>Cantidad de Previas </label>
                <input type="number" name="cant_mate_adeuda" class="form-control" placeholder="Direccion">
            </div>

            
            <div class="form-group">
                  <button type="submit" class="btn btn-primary">Guardar</button>
            </div>

        </form>

    </div>


{% endblock  %}
