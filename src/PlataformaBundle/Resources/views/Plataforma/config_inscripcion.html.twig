{% extends 'layout.html.twig' %}

{% block body %}

	{{ parent() }}
	{% for flashMessage in app.session.flashbag.get('mensaje') %}
		<div class="alert alert-success" role="alert">
			<div class="container">{{ flashMessage }}</div>

		</div>

	{% endfor %}

	<br>
    <br>
	   <div class="container">
	       <div class="col-md-12">
	           <center><div class="page-header margin-none">
	               <h1 class="padding-none">Configuracion de Cursos</h1>
	           </div></center>

	           <div class="row">
	           		<div class="col-md-6">
	                    <a href="{{ path('register_preins') }}" class="btn btn-primary btn-sm">
	                        
	                            <i class="fa fa-fw fa-plus"></i> Nuevo Configuracion
	                        
	                    </a>
	                </div>
	                <div class="col-md-6">    
	                    <form method="" action="" class="form-inline" role="search">
		           	   		
		           	   		<div class="form-group">
		           	   			<input type="text" name="query" class="form-control" placeholder="Buscar Curso" required>
		           	   		</div>	
		           	   		<input type="submit" value="Buscar" class="btn btn-default">
		           	   
		           	   </form>
		           	</div>   
                </div><br>
      		   	
      		  
		       <div class="table-responsive">
		       		<table class="table table-striped table-hover">
				        <thead>
				            <tr>
				           	   <th>AÃ±o de PreInscripcion</th>                      		
				               <th>Cantidad de Alumnos</th>
				               <th>Fecha de Inicio</th>
				               <th>Fecha de fin</th>
				               <th>Acciones</th>
				            </tr>
				        </thead>
				        <tbody>
				       	{% for cur in cursos %}
				            <tr>
				            	<td>{{ cur.anio }}</td>	
				                <td>{{ cur.cantidad }}</td>
				                <td>{{ cur.fechaIni | date('d/m/Y') }}</td>
				                <td>{{ cur.fechaFin | date('d/m/Y') }}</td>
				                <td>
				                    <a id="editar" name="editar" href='#modaleditcurso' data-toggle="modal" class='btn btn-info glyphicon glyphicon-edit row-edit open-AddBookDialog' style='padding: 2px 5px !important; margin-bottom: 0px; ' ></a>
				                    <a href="{{ path('eliminar_curso',{ id: cur.id}) }}" onclick="confirmDelete()" id="btnedit" class="btn btn-sm btn-danger btn-delete glyphicon glyphicon-remove style='padding: 2px 5px !important; margin-bottom: 0px; "></a>
				                </td>
		                    </tr>
		                {% endfor %}
		                </tbody>
		            </table>
		       </div>
		       
		    </div>   
	</div>       
       				
	<script type="text/javascript">
        
		function confirmDelete(){

			bootbox.confirm('Esta Seguro de Realizar Esta Accion', function(result){

				if(result == true){
					document.form.submit();
				}

			});

		}
       

    </script>	

 {% endblock %}      	