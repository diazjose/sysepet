{% extends 'layout.html.twig' %}


{% block body %}

    {{ parent() }}

    <div class="container">

        <div class="col-md-4 col-md-offset-4">

            <form action= " {{ path('login_check') }} " method= "post" class="form-signin">

                <h2 class="form-signin-heading">Login</h2>

                <label for="username" class="sr-only">Email</label>
                <input type="text" id="username" name="_username" class="form-control" placeholder="Nombre de Usuario o Email" required autofocus>

                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id= "password" name= "_password" class="form-control" placeholder="Password" required>

                {#
                  Si quieres controlar la url a la que el usuario
                  es redirigido al enviar correctamente el formulario
                  <input type="hidden" name="" value="/account" />
                #}
                {# <input type="hidden" name="_target_path" value="{{ path('Usuario') }}" /> #}

                <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesion</button>

            </form>
         </div>

</div> <!-- /container -->
{% endblock %}